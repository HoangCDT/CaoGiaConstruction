@model ReportHomeDto
@{
    ViewData["Title"] = "Quản trị hệ thống";
}
<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">

                    </div>
                    <h4 class="page-title">Dashboard</h4>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">

                <div class="row">
                    <div class="col-12 col-sm-3">
                        <div class="card widget-flat">
                            <div class="card-body">
                                <div class="float-end">
                                    <i class="mdi mdi-apps widget-icon"></i>
                                </div>
                                <h5 class="text-muted fw-normal mt-0" title="Quản lý sản phẩm">Quản lý sản phẩm</h5>
                                <h3 class="mt-3 mb-3">@Model.ProductNumber</h3>
                                <p class="mb-0 text-muted">
                                    <a asp-route="admin-product">
                                        <span class="text-nowrap">
                                            Xem chi tiết
                                            <i class="mdi mdi-chevron-right"></i>
                                        </span>
                                    </a>
                                </p>
                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div> <!-- end col-->

                    <div class="col-12 col-sm-3">
                        <div class="card widget-flat">
                            <div class="card-body">
                                <div class="float-end">
                                    <i class="mdi mdi-cart-plus widget-icon"></i>
                                </div>
                                <h5 class="text-muted fw-normal mt-0" title="Quản lý đơn hàng">Quản lý đơn hàng</h5>
                                <h3 class="mt-3 mb-3">0</h3>
                                <p class="mb-0 text-muted">
                                    <a asp-route="admin-order"> <span class="text-nowrap">Xem chi tiết <i
                                                class="mdi mdi-chevron-right"></i></span></a>
                                </p>
                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div> <!-- end col-->
                    <div class="col-12 col-sm-3">
                        <div class="card widget-flat">
                            <div class="card-body">
                                <div class="float-end">
                                    <i class="mdi mdi-book-edit-outline widget-icon"></i>
                                </div>
                                <h5 class="text-muted fw-normal mt-0" title="Quản lý bài viết">Quản lý bài viết</h5>
                                <h3 class="mt-3 mb-3">@Model.BlogNumber </h3>
                                <p class="mb-0 text-muted">
                                    <a asp-route="admin-blog"> <span class="text-nowrap">Xem chi tiết <i
                                                class="mdi mdi-chevron-right"></i></span></a>
                                </p>
                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div> <!-- end col-->

                    <div class="col-12 col-sm-3">
                        <div class="card widget-flat">
                            <div class="card-body">
                                <div class="float-end">
                                    <i class="uil-envelope widget-icon"></i>
                                </div>
                                <h5 class="text-muted fw-normal mt-0" title="Growth">Thư liên hệ</h5>
                                <h3 class="mt-3 mb-3">@Model.ContactNumber</h3>
                                <p class="mb-0 text-muted">
                                    <a asp-route="admin-contact"> <span class="text-nowrap">Xem chi tiết <i
                                                class="mdi mdi-chevron-right"></i></span></a>
                                </p>
                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div> <!-- end col-->
                </div> <!-- end row -->

            </div> <!-- end col -->


        </div>
    </div>
    <!-- container -->

</div>
<!-- content -->
