<div class="modal fade" id="modal-home-config" tabindex="-1" role="dialog" aria-labelledby="modalHomeConfigLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <form id="form-home-config">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalHomeConfigLabel">Thêm / Chỉnh sửa</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3"><i>Lưu ý: </i>(<span class="text-danger">*</span>) là trường bắt buộc nhập</div>

                            <div class="mb-3">
                                <label class="form-label">Tên component <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="name" placeholder="Ví dụ: Máy móc nổi bật">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Component key <span class="text-danger">*</span></label>
                                <select class="form-control mb-2" id="componentKeySelect">
                                    <option value="">-- Chọn component có sẵn --</option>
                                    <optgroup label="View Components">
                                        <option value="vcAboutHome">vcAboutHome - Giới thiệu công ty</option>
                                        <option value="vcService">vcService - Dịch vụ</option>
                                        <option value="vcProfessionalService">vcProfessionalService - Dịch vụ chuyên nghiệp</option>
                                        <option value="vcBlogHome">vcBlogHome - Bài viết</option>
                                        <option value="vcHotProduct">vcHotProduct - Sản phẩm nổi bật</option>
                                        <option value="vcHotMachine">vcHotMachine - Máy móc nổi bật</option>
                                        <option value="vcBranches">vcBranches - Chi nhánh</option>
                                        <option value="vcBranchesV2">vcBranchesV2 - Chi nhánh V2</option>
                                        <option value="vcVideo">vcVideo - Video</option>
                                        <option value="vcFeedback">vcFeedback - Phản hồi</option>
                                        <option value="vcContactHome">vcContactHome - Form liên hệ trang chủ</option>
                                        <option value="vcProcessStep">vcProcessStep - Quy trình</option>
                                        <option value="vcAboutV2">vcAboutV2 - Giới thiệu V2</option>
                                    </optgroup>
                                    <optgroup label="Partial Views">
                                        <option value="_SlideTopHome">_SlideTopHome - Slide đầu trang</option>
                                        <option value="_TiktokEmbedContainer">_TiktokEmbedContainer - TikTok embed</option>
                                    </optgroup>
                                </select>
                                <input class="form-control" type="text" id="componentKeyInput" name="componentKey"
                                    placeholder="Hoặc nhập component key tùy chỉnh (ví dụ: vcHotMachine hoặc _SlideTopHome)">
                                <small class="text-muted d-block mt-1">
                                    <i class="mdi mdi-information"></i> Bắt đầu bằng "_" hoặc chứa "/" sẽ render theo Partial View.
                                </small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Javascript kèm theo</label>
                                <textarea class="form-control" name="javascript" rows="6"
                                    placeholder="Dán đoạn JS nếu cần chạy cho component này"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Thứ tự sắp xếp</label>
                                <input class="form-control" type="number" name="sortOrder" placeholder="Ví dụ: 1">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái: &nbsp;</label>
                                <br />
                                <div>
                                    <input type="checkbox" id="home-config-status" checked name="status"
                                        class="switch-status" data-switch="success">
                                    <label for="home-config-status" data-on-label="Kích hoạt" data-off-label="Tắt"
                                        class="mb-0 d-block"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-success ladda-button" id="btn-save" data-style="expand-right">
                        <i class="mdi mdi-content-save"></i> Lưu lại
                    </button>
                </div>

            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div>
