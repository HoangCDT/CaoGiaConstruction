<div class="modal fade" id="modal-home-config" tabindex="-1" role="dialog" aria-labelledby="modalHomeConfigLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <form id="form-home-config">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalHomeConfigLabel">Thêm / Chỉnh sửa</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3"><i>Lưu ý: </i>(<span class="text-danger">*</span>) là trường bắt buộc nhập</div>

                            <div class="mb-3">
                                <label class="form-label">Tên component <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="name" placeholder="Ví dụ: Máy móc nổi bật">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Component key <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="componentKey"
                                    placeholder="Ví dụ: vcHotMachine hoặc _SlideTopHome">
                                <small class="text-muted">Bắt đầu bằng "_" hoặc chứa "/" sẽ render theo Partial View.</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Javascript kèm theo</label>
                                <textarea class="form-control" name="javascript" rows="6"
                                    placeholder="Dán đoạn JS nếu cần chạy cho component này"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Thứ tự sắp xếp</label>
                                <input class="form-control" type="number" name="sortOrder" placeholder="Ví dụ: 1">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái: &nbsp;</label>
                                <br />
                                <div>
                                    <input type="checkbox" id="home-config-status" checked name="status"
                                        class="switch-status" data-switch="success">
                                    <label for="home-config-status" data-on-label="Kích hoạt" data-off-label="Tắt"
                                        class="mb-0 d-block"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-success ladda-button" id="btn-save" data-style="expand-right">
                        <i class="mdi mdi-content-save"></i> Lưu lại
                    </button>
                </div>

            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div>
