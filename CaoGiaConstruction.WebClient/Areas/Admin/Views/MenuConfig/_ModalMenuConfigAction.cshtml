<div class="modal fade" id="modal-menu-config" tabindex="-1" role="dialog" aria-labelledby="modalMenuConfigLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <form id="form-menu-config">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalMenuConfigLabel">Thêm / Chỉnh sửa</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3"><i>Lưu ý: </i>(<span class="text-danger">*</span>) là trường bắt buộc nhập</div>

                            <div class="mb-3">
                                <label class="form-label">Tên menu <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="name" placeholder="Ví dụ: Menu chính">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Menu key <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" name="menuKey" placeholder="Ví dụ: header-main">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Menu JSON</label>
                                <textarea class="form-control" name="menuJson" rows="10"
                                    placeholder='Ví dụ: [{"title":"Về chúng tôi","routeName":"about","children":[{"title":"Hệ thống chi nhánh","routeName":"branch"}]}]'></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Thứ tự sắp xếp</label>
                                <input class="form-control" type="number" name="sortOrder" placeholder="Ví dụ: 1">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Trạng thái: &nbsp;</label>
                                <br />
                                <div>
                                    <input type="checkbox" id="menu-config-status" checked name="status"
                                        class="switch-status" data-switch="success">
                                    <label for="menu-config-status" data-on-label="Kích hoạt" data-off-label="Tắt"
                                        class="mb-0 d-block"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-success ladda-button" id="btn-save" data-style="expand-right">
                        <i class="mdi mdi-content-save"></i> Lưu lại
                    </button>
                </div>

            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div>
