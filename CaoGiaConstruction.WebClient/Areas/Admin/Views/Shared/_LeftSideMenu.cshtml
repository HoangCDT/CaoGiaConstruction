@inject IReportService reportService
@{
    var resultCount = await reportService.GetCountSideBar();
}
<div class="leftside-menu">

    <!-- Brand Logo Light -->
    <a target="_blank" asp-route="home" class="logo logo-light">
        <span class="logo-lg">
            <img src="~/Admin/assets/images/logo.png" alt="logo" style="height: 60px;border-radius: 5px;">
        </span>
        <span class="logo-sm">
            <img src="~/Admin/assets/images/logo-sm.png" alt="small logo" style="height: 60px;border-radius: 5px;">
        </span>
    </a>

    <!-- Brand Logo Dark -->
    <a target="_blank" asp-route="home" class="logo logo-dark">
        <span class="logo-lg">
            <img src="~/Admin/assets/images/logo-dark.png" alt="dark logo" style="height: 60px;border-radius: 5px;">
        </span>
        <span class="logo-sm">
            <img src="~/Admin/assets/images/logo-dark-sm.png" alt="small logo" style="height: 60px;border-radius: 5px;">
        </span>
    </a>

    <!-- Sidebar Hover Menu Toggle Button -->
    <div class="button-sm-hover" data-bs-toggle="tooltip" data-bs-placement="right" title="Show Full Sidebar">
        <i class="ri-checkbox-blank-circle-line align-middle"></i>
    </div>

    <!-- Full Sidebar Menu Close Button -->
    <div class="button-close-fullsidebar">
        <i class="ri-close-fill align-middle"></i>
    </div>

    <!-- Sidebar -left -->
    <div class="h-100" id="leftside-menu-container" data-simplebar>
        <!-- Leftbar User -->
        <div class="leftbar-user">
            <a href="#">
                <img src="@User.GetValueByType("avatar").ToHostUserAvatar()" alt="@User.GetValueByType("name")"
                    height="42" class="rounded-circle shadow-sm">
                <span class="leftbar-user-name mt-2">@User.GetValueByType("name")</span>
            </a>
        </div>

        <!--- Sidemenu -->
        <ul class="side-nav">
            <li class="side-nav-title">Điều hướng</li>
            <li class="side-nav-item">
                <a asp-route="admin-default" class="side-nav-link">
                    <i class="uil uil-dashboard"></i>
                    <span> Dashboards </span>
                </a>
            </li>

            <!--##region Giao diện & Doanh nghiệp -->

            <li class="side-nav-title">Quản lý doanh nghiệp</li>

            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarInfo" aria-expanded="false" aria-controls="sidebarInfo"
                    class="side-nav-link collapsed">
                    <i class="uil uil-info-circle "></i>
                    <span>Thông tin chung</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarInfo">
                    <ul class="side-nav-second-level">
                        <li>
                            <a asp-route="admin-about" class="side-nav-link">
                                <span>Giới thiệu</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-timeline" class="side-nav-link">
                                <span> Lịch sử phát triển </span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-branches" class="side-nav-link">
                                <span> Hệ thống chi nhánh </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <!-- #endregion -->

            <!-- #region Quản lý sản phẩm - Dịch vụ -->
            <li class="side-nav-title">Sản phẩm - Dịch vụ</li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarProduct" aria-expanded="false" aria-controls="sidebarProduct"
                    class="side-nav-link collapsed">
                    <i class="uil uil-box"></i>
                    <span> Quản lý sản phẩm </span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarProduct">
                    <ul class="side-nav-second-level">
                        <li>
                            <a asp-route="admin-product-cat" class="side-nav-link">
                                <span> Loại sản phẩm</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-product" class="side-nav-link">
                                <span> Sản phẩm</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-properties" class="side-nav-link">
                                <span> Thuộc tính</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarService" aria-expanded="false" aria-controls="sidebarService"
                    class="side-nav-link collapsed">
                    <i class="uil  uil-invoice"></i>
                    <span> Quản lý dịch vụ </span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarService">
                    <ul class="side-nav-second-level">
                        <li>
                            <a asp-route="admin-service-cat" class="side-nav-link">
                                <span> Loại Dịch vụ</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-service" class="side-nav-link">
                                <span> Dịch vụ</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-project" class="side-nav-link">
                                <span> Dự án</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>

            <!-- #endregion -->
            <!-- #region Quản lý bài viết -->

            <li class="side-nav-title">Kiến thức - Tin tức - Công thức</li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarEvent" aria-expanded="false" aria-controls="sidebarEvent"
                    class="side-nav-link collapsed">
                    <i class="uil uil-tv-retro"></i>
                    <span>Quản lý kiến thức</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarEvent">
                    <ul class="side-nav-second-level">
                        <li>
                            <a asp-route="admin-blog-cat" class="side-nav-link">
                                <span> Loại kiến thức</span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-blog" class="side-nav-link">
                                <span> Kiến thức</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarBlog" aria-expanded="false" aria-controls="sidebarBlog"
                    class="side-nav-link collapsed">
                    <i class="uil uil-newspaper"></i>
                    <span>Quản lý tin tức</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarBlog">
                    <ul class="side-nav-second-level">
                        <li class="side-nav-item">
                            <a asp-route="admin-event-cat" class="side-nav-link">
                                <span> Loại tin tức</span>
                            </a>
                        </li>
                        <li class="side-nav-item">
                            <a asp-route="admin-event" class="side-nav-link">
                                <span> Tin tức - sự kiện</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarBlog" aria-expanded="false" aria-controls="sidebarBlog"
                    class="side-nav-link collapsed">
                    <i class="uil uil-newspaper"></i>
                    <span>Quản lý Công thức</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarBlog">
                    <ul class="side-nav-second-level">
                        <li class="side-nav-item">
                            <a asp-route="admin-formula-cat" class="side-nav-link">
                                <span> Loại Công thức</span>
                            </a>
                        </li>
                        <li class="side-nav-item">
                            <a asp-route="admin-formula" class="side-nav-link">
                                <span> Công thức</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <!-- #endregion -->

            <!-- #region Chức năng khác -->

            <li class="side-nav-title">Chức năng khác</li>
            <li class="side-nav-item">
                <a data-bs-toggle="collapse" href="#sidebarMedia" aria-expanded="false" aria-controls="sidebarMedia"
                    class="side-nav-link collapsed">
                    <i class="uil uil-comment-alt-image"></i>
                    <span>Media</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="collapse" id="sidebarMedia">
                    <ul class="side-nav-second-level">
                        <li>
                            <a asp-route="admin-slide" class="side-nav-link">
                                <span> Slide </span>
                            </a>
                        </li>
                        <li>
                            <a asp-route="admin-video" class="side-nav-link">
                                <span> Video </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="side-nav-item">
                <a asp-route="admin-feedback" class="side-nav-link">
                    <i class="uil uil-comments-alt"></i>
                    <span> Feedback </span>
                </a>
            </li>
            <li class="side-nav-item">
                <a asp-route="admin-contact" class="side-nav-link">
                    <i class="uil uil-envelope "></i>
                    @if (resultCount.ContactNumber > 0)
                    {
                        <span class="badge bg-success float-end">@resultCount.ContactNumber</span>
                    }
                    <span> Thư liên hệ </span>
                </a>
            </li>
            <!-- #endregion -->
            <!-- #region name Hệ thống-->


            <li class="side-nav-title">Hệ thống</li>
            <li class="side-nav-item">
                <a asp-route="admin-setting" class="side-nav-link">
                    <i class="uil uil-cog"></i>
                    <span> Cấu hình hệ thống </span>
                </a>
            </li>
            <li class="side-nav-item">
                <a asp-route="admin-define-system" class="side-nav-link">
                    <i class="uil uil-code"></i>
                    <span> Tham số hệ thống</span>
                </a>
            </li>
            <li class="side-nav-item">
                <a asp-route="admin-user" class="side-nav-link">
                    <i class="uil uil-user "></i>
                    <span> Tài khoản </span>
                </a>
            </li>
            <!-- #endregion -->
        </ul>
        <!--- End Sidemenu -->

        <div class="clearfix"></div>
    </div>
</div>