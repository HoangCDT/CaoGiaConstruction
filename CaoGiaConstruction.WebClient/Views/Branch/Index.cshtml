@model List<Branches>
@{
    var initialMapIFrame = Model.OrderBy(x => x.SortOrder).FirstOrDefault();
}

<div class="main-content branches-wrapper">
    <div class="page-header">
        @{
            var breadcrumbItems = new List<BreadcrumbDto>
        {
        new BreadcrumbDto { Url = "home", Title = "Trang chủ", IsActive = false },
        new BreadcrumbDto { Url = "branches", Title = "Hệ thống chi nhánh", IsActive = true },
        };
        }
        @await Component.InvokeAsync(nameof(vcBreadcrumb), breadcrumbItems)
    </div>

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-4" style="margin-bottom: 50px;">
                    <div class="branch-list">
                        @foreach (var branch in Model.OrderBy(x => x.SortOrder))
                        {
                            <div class="item-branch @(initialMapIFrame.Id == branch.Id? "active": null)"
                                data-id="@branch.Id" data-map="@branch.MapIFrame">

                                <h3 class="branch-title"> @branch.Title</h3>
                                @if (branch.PhoneNumber != null && branch.PhoneNumber != "")
                                {
                                    <p class="branch-phone">
                                        <b><i class="fa fa-phone"></i> Điện thoại:</b>
                                        @branch.PhoneNumber
                                    </p>
                                }
                                <p class="branch-address">
                                    <b><i class="fa fa-map"></i> Địa chỉ:</b>
                                    @branch.Address
                                </p>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="map-wrapper-modern">
                        @{
                            string mapUrl = initialMapIFrame?.MapIFrame ?? "";
                            // Nếu MapIFrame chứa thẻ iframe, extract URL từ src
                            if (!string.IsNullOrEmpty(mapUrl) && mapUrl.Contains("<iframe"))
                            {
                                var srcMatch = System.Text.RegularExpressions.Regex.Match(mapUrl, @"src=[""']([^""']+)[""']");
                                if (srcMatch.Success)
                                {
                                    mapUrl = srcMatch.Groups[1].Value;
                                }
                            }
                            // Nếu vẫn chứa thẻ iframe, thử extract từ src= trực tiếp
                            if (!string.IsNullOrEmpty(mapUrl) && mapUrl.Contains("src="))
                            {
                                var srcMatch = System.Text.RegularExpressions.Regex.Match(mapUrl, @"src=[""']([^""']+)[""']");
                                if (srcMatch.Success)
                                {
                                    mapUrl = srcMatch.Groups[1].Value;
                                }
                            }
                        }
                        <iframe id="branchMapFrame" 
                                src="@mapUrl" 
                                width="100%" 
                                height="500px"
                                style="border:0; border-radius: 12px;" 
                                allowfullscreen="" 
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .map-wrapper-modern {
        position: relative;
        width: 100%;
        height: 500px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        background: #f0f0f0;
    }

    .map-wrapper-modern iframe {
        width: 100%;
        height: 100%;
        border: none;
        display: block;
    }

    @@media (max-width: 991px) {
        .map-wrapper-modern {
            height: 400px;
        }
    }

    @@media (max-width: 767px) {
        .map-wrapper-modern {
            height: 350px;
            border-radius: 8px;
        }
    }
</style>
