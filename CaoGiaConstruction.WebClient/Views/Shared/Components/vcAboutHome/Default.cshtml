@model AboutHomeVM
@using CaoGiaConstruction.Utilities

@{
    var primaryColor = Model?.Setting?.PrimaryColor ?? "#1b4332";
    var fontSize = Model?.Setting?.FontSize ?? "14px";
    var fontFamily = Model?.Setting?.FontFamily ?? "Arial, sans-serif";
    var about = Model?.About;
    var banner = Model?.Banner;
    var imageUrl = banner?.Avatar ?? about?.LogoTop;
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="~/Client/css/about-home.css" asp-append-version="true" />

<section class="about-home-section" id="about-home" style="--about-home-primary-color: @primaryColor; --about-home-font-size: @fontSize; --about-home-font-family: @fontFamily;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="about-home-content">
                    <h2 class="about-home-subtitle">GIỚI THIỆU DOANH NGHIỆP</h2>
                    <h3 class="about-home-title">
                        CHÚNG TÔI LÀ<br/>
                        <span class="about-home-title-accent">@(about?.AboutUs ?? "CAO GIA CONSTRUCTION")</span>
                    </h3>
                    <div class="about-home-description">
                        @if (!string.IsNullOrEmpty(about?.Description))
                        {
                            @Html.Raw(about.Description)
                        }
                        else
                        {
                            <p>Với hơn một thập kỷ kinh nghiệm trong lĩnh vực xây dựng và nội thất, Xây Dựng Cao Gia tự hào là đơn vị tiên phong mang đến những giải pháp kiến trúc tối ưu. Chúng tôi không chỉ xây dựng những ngôi nhà, mà còn kiến tạo những tổ ấm bền vững, nơi giá trị thẩm mỹ và công năng hòa quyện làm một.</p>
                        }
                    </div>
                    <div class="about-home-features">
                        <div class="about-home-feature-item">
                            <div class="about-home-feature-icon">
                                <span class="material-symbols-outlined">verified</span>
                            </div>
                            <h4 class="about-home-feature-label">KINH NGHIỆM</h4>
                        </div>
                        <div class="about-home-feature-item">
                            <div class="about-home-feature-icon">
                                <span class="material-symbols-outlined">architecture</span>
                            </div>
                            <h4 class="about-home-feature-label">CHẤT LƯỢNG</h4>
                        </div>
                        <div class="about-home-feature-item">
                            <div class="about-home-feature-icon">
                                <span class="material-symbols-outlined">handshake</span>
                            </div>
                            <h4 class="about-home-feature-label">TẬN TÂM</h4>
                        </div>
                    </div>
                    <div class="about-home-button-wrapper">
                        <a asp-route="about" class="about-home-button">
                            Xem thêm
                            <span class="material-symbols-outlined">trending_flat</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="about-home-image-wrapper">
                    <div class="about-home-image-border"></div>
                    @if (!string.IsNullOrEmpty(imageUrl))
                    {
                        <div class="about-home-image-container">
                            <a href="@imageUrl.ToHostImage()" data-fancybox="gallery" data-caption="@(banner?.Title ?? about?.AboutUs)" title="@(banner?.Title ?? about?.AboutUs)">
                                <img src="@imageUrl.ToHostImage()" alt="@(banner?.Title ?? about?.AboutUs ?? "Về Cao Gia Construction")" class="about-home-image" />
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>