version: '3'

# Docker Compose file cho UAT Environment
# Copy file này lên server UAT tại: /home/github-actions/docker-deploys/cao-gia-construction-uat/docker-compose.yml

networks: 
  docker-net:
    external: true

services:
  cao-gia-construction-uat:
    container_name: cao-gia-construction-uat
    image: hoangcdt/cao-gia-construction:latest
    hostname: cao-gia-construction-uat
    restart: always
    networks: 
      - docker-net
    volumes:
       - /home/backup/cao-gia-construction-uat/fileuploads:/app/wwwroot/fileuploads
    environment:
       CONNECT_STRING_API: Host=postgres.hqsolutions.vn;Port=5432;Database=CAOGIACONSTRUCTION_UAT;User ID=hqs;Password=YOUR_PASSWORD;
       ASPNETCORE_ENVIRONMENT: Staging
       TZ: Asia/Ho_Chi_Minh
    ports:
      - "8080:8080"
      - "8081:8081"

